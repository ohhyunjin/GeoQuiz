<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_correct_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correct_count_label"/>

        <TextView
                android:id="@+id/tv_incorrect_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incorrect_count_label"/>

    </LinearLayout>


    <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
    />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_true_text"
                android:textColor="@color/colorPrimary"
                style="?android:attr/buttonBarButtonStyle"/>

        <Button
                android:id="@+id/btn_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_false_text"
                style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>

</LinearLayout>